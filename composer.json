{
	"name": "arthursatarov/morph-wp-theme",
	"description": "WordPress Starter Theme",
	"type": "project",
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		}
	],
	"require": {
		"composer/installers": "^2.0"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "*",
		"phpcompatibility/php-compatibility": "*",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"wp-coding-standards/wpcs": "^3.1",
		"phpcompatibility/phpcompatibility-wp": "^2.1"
	},
	"extra": {
		"installer-paths": {
			"./www/plugins/{$name}/": [
				"type:wordpress-plugin"
			],
			"./www/themes/{$name}/": [
				"type:wordpress-theme"
			]
		}
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"format": "phpcbf --report=summary,source",
		"lint": "phpcs --report=code",
		"report": "phpcs --report=info",
		"pot": "wp i18n make-pot . build/languages/wd_s.pot --exclude=node_modules,vendor,build --allow-root"
	}
}
